{
  "name": "madapaja/twig-module",
  "description": "BEAR.Sunday Twig adapter module",
  "keywords":[
    "BEAR.Sunday",
    "Twig",
    "BEAR.Sunday module"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Koji Iwasaki",
      "email": "iwasaki@cresc.com"
    }
  ],
  "require": {
    "ray/di": "^2.5.3",
    "bear/sunday": "^1.1",
    "bear/app-meta": "^1.1",
    "twig/twig": "^2.0",
    "mobiledetect/mobiledetectlib": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7 < 6.0",
    "squizlabs/php_codesniffer": "^2.8",
    "phpmd/phpmd": "^2.6"
  },
  "autoload":{
    "psr-4":{
      "Madapaja\\TwigModule\\": "src/"
    }
  },
  "autoload-dev":{
    "psr-4":{
      "Madapaja\\TwigModule\\": "tests/Fake/src"
    }
  },
  "scripts": {
    "test": ["@cs", "php -n ./vendor/bin/phpunit"],
    "cs": ["php -n ./vendor/bin/php-cs-fixer fix -v --dry-run", "php -n ./vendor/bin/phpcs --standard=./phpcs.xml src"],
    "cs-fix": ["php -n ./vendor/bin/php-cs-fixer fix -v", "php -n ./vendor/bin/phpcbf src"],
    "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
    "md": ["phpmd src text phpmd.xml"],
    "check-all": ["@cs", "@md", "@coverage"]
  }
}
