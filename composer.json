{
  "name": "madapaja/twig-module",
  "description": "BEAR.Sunday Twig adapter module",
  "keywords":[
    "BEAR.Sunday",
    "Twig",
    "BEAR.Sunday module"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Koji Iwasaki",
      "email": "iwasaki@cresc.com"
    }
  ],
  "require": {
    "twig/twig": "~1.0",
    "bear/app-meta": "~1.0",
    "bear/resource": "~1.0",
    "bear/sunday": "~1.0",
    "mobiledetect/mobiledetectlib": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7 || ~4.4.0",
    "friendsofphp/php-cs-fixer": "~1",
    "phpmd/phpmd" : "~2"
  },
  "autoload":{
    "psr-4":{
      "Madapaja\\TwigModule\\": "src/"
    }
  },
  "autoload-dev":{
    "psr-4":{
      "Madapaja\\TwigModule\\": "tests/Fake/src"
    }
  },
  "scripts": {
    "test": [
      "php -d memory_limit=-1 -n ./vendor/bin/phpmd src text phpmd.xml",
      "php -d memory_limit=-1 -n ./vendor/bin/php-cs-fixer fix -v --level=psr2 src",
      "./vendor/bin/phpunit --coverage-text"
    ]
  }
}
